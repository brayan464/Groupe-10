<Window x:Class="WpfCompresse_decompresse.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion" 
        Height="200" Width="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Nom d'utilisateur -->
        <TextBlock Text="Nom d'utilisateur :" Foreground="White" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="UsernameBox" Grid.Row="1" Background="#3A3A3A" Foreground="White" Margin="0,0,0,10"/>

        <!-- Mot de passe -->
        <TextBlock Text="Mot de passe :" Foreground="White" Grid.Row="2" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="3" Background="#3A3A3A" Foreground="White" Margin="0,0,0,10"/>

        <!-- Boutons OK / Annuler -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="5" Click="Ok_Click"/>
            <Button Content="Annuler" Width="75" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
