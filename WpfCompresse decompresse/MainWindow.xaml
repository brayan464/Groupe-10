<Window x:Class="WpfCompresse_decompresse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Compresseur / Décompresseur"
        Height="600" Width="985"
        Background="#1E1E1E">

    <DockPanel Margin="5">

        <!-- BARRE D'OUTILS -->
        <ToolBar DockPanel.Dock="Top" Background="#2D2D30">
            <Button Click="CompressATG_Click" Margin="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🗜️" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Compresser (.ATG)" Foreground="White"/>
                </StackPanel>
            </Button>

            <Button Click="CompressZIP_Click" Margin="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📦" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Compresser (.zip)" Foreground="White"/>
                </StackPanel>
            </Button>

            <Button Click="Decompress_Click" Margin="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🗂️" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Décompresser" Foreground="White"/>
                </StackPanel>
            </Button>
        </ToolBar>

        <!-- ZONE PRINCIPALE -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- ARBORESCENCE -->
            <TreeView x:Name="FileTreeView"
                      Background="#2D2D30"
                      Foreground="White"
                      SelectedItemChanged="FileTreeView_SelectedItemChanged"/>

            <!-- PANNEAU DE DROITE -->
            <Grid Grid.Column="1" Margin="10,0,0,0">

                <StackPanel x:Name="MainPanel">
                    <TextBlock Text="Fichier sélectionné:" Foreground="White"/>
                    <TextBox x:Name="FilePathBox"
                             IsReadOnly="True"
                             Background="#3A3A3A"
                             Foreground="White"
                             Margin="0,5,0,10"/>

                    <ProgressBar x:Name="ProgressBar"
                                 Height="25"
                                 Minimum="0" Maximum="100"
                                 Foreground="#00FF00"/>

                    <TextBlock Text="Dossiers copiés sur le réseau :"
                               Foreground="White"
                               Margin="0,20,0,5"/>

                    <ListBox x:Name="NetworkClipboardList"
                             Height="420"
                             Background="#3A3A3A"
                             Foreground="White"
                             BorderBrush="#555"
                             BorderThickness="1"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             MouseDoubleClick="NetworkClipboardList_MouseDoubleClick"/>
                </StackPanel>

                <!-- PANEL LOGIN MODAL -->
                <Border x:Name="LoginPanel"
                        Background="#2D2D30"
                        BorderBrush="#555"
                        BorderThickness="1"
                        Visibility="Collapsed"
                        CornerRadius="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Padding="15"
                        Width="250" Height="180">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Nom d'utilisateur :" Foreground="White" Grid.Row="0"/>
                        <TextBox x:Name="LoginUsername" Grid.Row="1" Margin="0,5,0,10"
                                 Background="#3A3A3A" Foreground="White"/>

                        <TextBlock Text="Mot de passe :" Foreground="White" Grid.Row="2"/>
                        <PasswordBox x:Name="LoginPassword" Grid.Row="3" Margin="0,5,0,10"
                                     Background="#3A3A3A" Foreground="White"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,0,0">
                            <Button x:Name="LoginOk" Content="OK" Width="75" Margin="5"/>
                            <Button x:Name="LoginCancel" Content="Annuler" Width="75" Margin="5"/>

                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
