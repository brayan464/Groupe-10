<Window x:Class="WpfCompresse_decompresse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Compresseur / Décompresseur" Height="650" Width="950"
        Background="#1E1E1E">

    <DockPanel Margin="5">
        <!-- Barre d'outils -->
        <ToolBar DockPanel.Dock="Top" Background="#2D2D30">
            <Button Click="CompressATG_Click" Margin="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🗜️" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Compresser (.ATG)" Foreground="White"/>
                </StackPanel>
            </Button>

            <Button Click="CompressZIP_Click" Margin="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📦" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Compresser (.ZIP)" Foreground="White"/>
                </StackPanel>
            </Button>

            <Button Click="Decompress_Click" Margin="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🗂️" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Décompresser" Foreground="White"/>
                </StackPanel>
            </Button>
        </ToolBar>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- TreeView -->
            <TreeView x:Name="FileTreeView" Background="#2D2D30" Foreground="White"
                      SelectedItemChanged="FileTreeView_SelectedItemChanged"/>

            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <!-- Fichier sélectionné -->
                <TextBlock Text="Fichier sélectionné:" Foreground="White"/>
                <TextBox x:Name="FilePathBox" IsReadOnly="True" Background="#3A3A3A" Foreground="White" Margin="0,5,0,10"/>

                <!-- ProgressBar -->
                <ProgressBar x:Name="ProgressBar" Height="25" Minimum="0" Maximum="100" Foreground="#00FF00"/>

                <!-- Bouton copier le chemin -->
                <Button Click="CopyPath_Click" Margin="0,10,0,0">
                    <TextBlock Text="📋 Copier le chemin sélectionné(NON OPERATIONELLE ENRESEAU)" Foreground="Black"/>
                </Button>

                <!-- Extension personnalisée -->
                <TextBlock Text="Extension personnalisée (ex: .myext):" Foreground="White" Margin="0,10,0,0"/>
                <TextBox x:Name="CustomExtBox" Text=".myext" Background="#3A3A3A" Foreground="White" Margin="0,5,0,10"/>

                <Button Click="CompressCustom_Click" Margin="0,5,0,0">
                    <TextBlock Text="🗜️ Compresser avec extension personnalisée" Foreground="Black"/>
                </Button>

                <Button Click="DecompressCustom_Click" Margin="0,5,0,10">
                    <TextBlock Text="🗂️ Décompresser extension personnalisée" Foreground="Black"/>
                </Button>

                <!-- Liste des fichiers/dossiers copiés -->
                <TextBlock Text="Fichiers/Dossiers copiés:" Foreground="White" Margin="0,10,0,0"/>
                <ListBox x:Name="CopiedFilesListBox" Height="200" Background="#3A3A3A" Foreground="White"
                         MouseDoubleClick="CopiedFilesListBox_MouseDoubleClick"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
